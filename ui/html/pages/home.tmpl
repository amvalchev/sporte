{{define "title"}}Home{{end}}

{{define "main"}}
    <div class="flex justify-between items-center mb-6">
        <h2 class="text-3xl font-bold text-slate-800">Latest Sport Events</h2>
    </div>

    {{if .Events}}
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            {{range .Events}}
                <!-- Each event is a clickable link to its detail page -->
                <a href="{{printf "/event/view/%d" .EventID}}" class="block bg-white p-6 rounded-lg shadow-md hover:shadow-xl transition-shadow duration-200">
                    <h3 class="text-xl font-bold text-blue-600 mb-2">{{.EventName}}</h3>
                    <p class="text-slate-600 mb-4">{{.Description}}</p>
                    <div class="text-sm text-slate-500">
                        <strong>Date:</strong> {{.EventDateTime.Format "02 Jan 2006"}}
                    </div>
                </a>
            {{end}} <!-- This closes the 'range' block -->
        </div>
    {{else}}
        <!-- This is shown if there are no events -->
        <div class="bg-white p-8 rounded-xl shadow-lg">
            <p class="text-slate-600">There's nothing to see here yet!</p>
        </div>
    {{end}} <!-- This closes the 'if' block -->

{{end}} <!-- THIS IS THE CRUCIAL MISSING 'end' THAT CLOSES THE 'define "main"' BLOCK -->
