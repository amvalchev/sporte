{{define "title"}}{{.Event.EventName}}{{end}}

{{define "main"}}
    <div class="space-y-8">

        <!-- UPDATED: The 'if' and 'index' calls now use .TeamsInEvent -->
        {{if ge (len .TeamsInEvent) 2}}
            <div class="bg-white p-8 rounded-xl shadow-lg">
                <div class="flex items-stretch gap-6">

                    <!-- Column 1: Team 1 -->
                    <div class="flex-1">
                        <!-- UPDATED: We get the first team from the .TeamsInEvent slice -->
                        {{with (index .TeamsInEvent 0)}}
                            <div class="flex justify-between items-baseline border-b pb-3 mb-4">
                                <h4 class="text-2xl font-bold text-slate-800">{{.Team.Name}}</h4>
                                <span class="text-3xl font-black text-blue-600">{{.Score}}</span>
                            </div>
                            <div class="text-sm text-slate-500 space-y-1 mb-4">
                                <p><strong>Coach:</strong> {{.Team.Coach}}</p>
                                <p><strong>Founded:</strong> {{.Team.YearFounded}}</p>
                            </div>
                            <h5 class="text-md font-semibold text-slate-600 mb-2">Roster</h5>
                            <ul class="space-y-1 text-sm">
                                {{range .Players}}
                                    <li class="flex justify-between p-1 rounded hover:bg-slate-100">
                                        <span>{{.FirstName}} {{.LastName}}</span>
                                        <span class="text-slate-500">{{.Position}}</span>
                                    </li>
                                {{end}}
                            </ul>
                        {{end}}
                    </div>

                    <!-- Column 2: Event Details -->
                    <div class="flex-shrink-0 text-center bg-slate-100 rounded-lg p-6 flex flex-col justify-center">
                        <p class="text-5xl font-black text-red-400">VS</p>
                        <p class="text-md text-slate-500 mt-4 font-semibold">{{.Event.EventDateTime.Format "Mon, 02 Jan 2006"}}</p>
                        <p class="text-sm text-slate-400">{{.Event.EventDateTime.Format "3:04 PM"}}</p>
                    </div>

                    <!-- Column 3: Team 2 -->
                    <div class="flex-1">
                        <!-- UPDATED: We get the second team from the .TeamsInEvent slice -->
                        {{with (index .TeamsInEvent 1)}}
                           <div class="flex justify-between items-baseline border-b pb-3 mb-4">
                                <h4 class="text-2xl font-bold text-slate-800">{{.Team.Name}}</h4>
                                <span class="text-3xl font-black text-blue-600">{{.Score}}</span>
                            </div>
                            <div class="text-sm text-slate-500 space-y-1 mb-4">
                                <p><strong>Coach:</strong> {{.Team.Coach}}</p>
                                <p><strong>Founded:</strong> {{.Team.YearFounded}}</p>
                            </div>
                            <h5 class="text-md font-semibold text-slate-600 mb-2">Roster</h5>
                            <ul class="space-y-1 text-sm">
                                {{range .Players}}
                                    <li class="flex justify-between p-1 rounded hover:bg-slate-100">
                                        <span>{{.FirstName}} {{.LastName}}</span>
                                        <span class="text-slate-500">{{.Position}}</span>
                                    </li>
                                {{end}}
                            </ul>
                        {{end}}
                    </div>
                </div>
            </div>
        {{end}}

        <!-- Bottom Details Card -->
        <div class="bg-white p-6 rounded-xl shadow-lg">
            <h3 class="text-xl font-bold text-slate-700 mb-4">Details</h3>

            <div class="mb-4">
                <p class="font-semibold text-blue-600">{{.Sport.Name}}</p>
                <p class="text-slate-600 text-sm leading-relaxed">{{.Sport.Description}}</p>
            </div>
            <div class="mb-4">
                <p class="font-semibold">About the Event</p>
                 <h3 class="text-2xl font-bold text-slate-800 mb-4">{{.Event.EventName}}</h3>
                <p class="text-slate-600 text-sm leading-relaxed">{{.Event.Description}}</p>
            </div>
            <div>
                 <p class="font-semibold">Location</p>
                 <p class="text-slate-600 text-sm"><strong>{{.Venue.Name}}</strong> (Capacity: {{.Venue.Capacity}})</p>
                 <p class="text-slate-600 text-sm">{{.Venue.Address}}, {{.Venue.City}}, {{.Venue.Country}}</p>
            </div>
        </div>
    </div>
         <div class="bg-red-50 border border-red-200 p-6 rounded-xl shadow-lg mt-10">
            <h3 class="text-xl font-bold text-red-800 mb-2">Danger Zone</h3>
            <p class="text-red-700 mb-4">Deleting this event cannot be undone. All associated team and player data for this event will be permanently removed.</p>

            <!-- This form will send the POST request to our delete handler -->
            <form action="{{printf "/event/delete/%d" .Event.EventID}}" method="POST">
                <button type="submit" class="bg-red-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-red-700 transition duration-200">
                    Delete This Event
                </button>
            </form>
        </div>

    </div>
{{end}}
