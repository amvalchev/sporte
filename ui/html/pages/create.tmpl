{{define "title"}}Create a New Event{{end}}

{{define "main"}}
<form action='/event/create' method='POST' class="max-w-2xl mx-auto bg-white p-8 rounded-xl shadow-lg space-y-6">
    <h2 class="text-2xl font-bold text-slate-800">Create New Sport Event</h2>

    <input type="text" name="eventName" placeholder="Event Name (e.g., Finals Series Game 7)" class="input-style">
    <textarea name="description" placeholder="Event Description" rows="3" class="input-style"></textarea>
    <input type="datetime-local" name="eventDateTime" class="input-style">

    <!-- UPDATED: We now loop over .AllSports -->
    <select name="sportID" class="input-style">
        {{range .AllSports}}<option value="{{.ID}}">{{.Name}}</option>{{end}}
    </select>

    <!-- UPDATED: We now loop over .AllVenues -->
    <select name="venueID" class="input-style">
        {{range .AllVenues}}<option value="{{.ID}}">{{.Name}}</option>{{end}}
    </select>

    <fieldset class="border p-4 rounded-lg">
        <legend class="text-lg font-medium px-2">Team 1</legend>
        <div class="flex gap-4">
            <!-- UPDATED: We now loop over .AllTeams -->
            <select name="team1ID" class="input-style flex-grow">
                {{range .AllTeams}}<option value="{{.ID}}">{{.Name}}</option>{{end}}
            </select>
            <input type="number" name="team1Score" placeholder="Score" class="input-style w-24">
        </div>
    </fieldset>

    <fieldset class="border p-4 rounded-lg">
        <legend class="text-lg font-medium px-2">Team 2</legend>
        <div class="flex gap-4">
            <!-- UPDATED: We now loop over .AllTeams -->
            <select name="team2ID" class="input-style flex-grow">
                {{range .AllTeams}}<option value="{{.ID}}">{{.Name}}</option>{{end}}
            </select>
            <input type="number" name="team2Score" placeholder="Score" class="input-style w-24">
        </div>
    </fieldset>

    <button type="submit" class="btn-primary">Create Event</button>
</form>
<style>.input-style {width: 100%; padding: 8px 12px; border-radius: 6px; border: 1px solid #cbd5e1;}</style>
<style>.btn-primary {width: 100%; padding: 10px; border-radius: 6px; background-color: #2563eb; color: white; font-weight: 600;}</style>
{{end}}
